# Environment Configuration
NODE_ENV=development
PORT=3000

# Coze API Configuration
# Option 1: Use API Key directly (legacy method)
COZE_API_KEY=your-coze-api-key
COZE_BASE_URL=https://api.coze.com
COZE_BOT_ID=your-bot-id
COZE_WORKFLOW_ID=your-workflow-id

# Option 2: Use JWT Authentication (recommended)
# If COZE_JWT_APP_ID is provided, JWT will be used instead of API key
COZE_JWT_APP_ID=your_jwt_app_id_here
COZE_JWT_KEY_ID=your_jwt_key_id_here
COZE_JWT_AUD=api.coze.com
COZE_JWT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour private key content here\n-----END PRIVATE KEY-----
COZE_JWT_SESSION_NAME=openai-proxy

# Optional Coze Configuration
COZE_SPACE_ID=your-space-id
COZE_BASE_WS_URL=wss://api.coze.com

# Proxy Configuration
DEFAULT_MODEL_TYPE=chat
ENABLE_CORS=true
ENABLE_LOGGING=true

# Security (Optional)
API_KEY_HEADER=Authorization
ALLOWED_ORIGINS=*
